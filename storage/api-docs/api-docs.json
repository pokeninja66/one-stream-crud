{
    "openapi": "3.0.0",
    "info": {
        "title": "One Stream CRUD API",
        "description": "API documentation for the Streams CRUD system",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000",
            "description": "Local development server"
        }
    ],
    "paths": {
        "/api/streams": {
            "get": {
                "tags": [
                    "Streams"
                ],
                "summary": "List streams with filtering and pagination",
                "description": "Retrieve a paginated list of streams with optional filtering and sorting",
                "operationId": "7a98e4d0d8e208d73ed94411b8b29629",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Search by title or description (supports both 'search' and 'q' parameters)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Alternative search parameter",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "stream_type_id",
                        "in": "query",
                        "description": "Filter by stream type ID",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Alternative stream type filter",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "order_by",
                        "in": "query",
                        "description": "Field to order by",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "title",
                                "tokens_price",
                                "date_expiration",
                                "created_at"
                            ]
                        }
                    },
                    {
                        "name": "order_dir",
                        "in": "query",
                        "description": "Sort direction",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc"
                            ]
                        }
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "JSON:API style sorting (use '-' prefix for descending)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of items per page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 15
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        },
                                        "links": {
                                            "type": "object"
                                        },
                                        "meta": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Streams"
                ],
                "summary": "Create a new stream",
                "description": "Create a new stream with the provided data",
                "operationId": "16b5b6d8e5acc9b498bf196169a1f3da",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Stream created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/streams/{id}": {
            "get": {
                "tags": [
                    "Streams"
                ],
                "summary": "Get a specific stream",
                "description": "Retrieve a single stream by its ID",
                "operationId": "85a24891878db856b97cb827f5b462fe",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Stream UUID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Stream not found"
                    }
                }
            },
            "put": {
                "tags": [
                    "Streams"
                ],
                "summary": "Update a stream",
                "description": "Update an existing stream with the provided data",
                "operationId": "f2115dc8a564ad57ceaa2cd04b9f844d",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Stream UUID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Stream updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Stream not found"
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Streams"
                ],
                "summary": "Delete a stream",
                "description": "Soft delete a stream (marks as deleted but doesn't remove from database)",
                "operationId": "10d13f285ea0f0c8ec0b6af18e2f049e",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Stream UUID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Stream deleted successfully"
                    },
                    "404": {
                        "description": "Stream not found"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Streams",
            "description": "Stream management endpoints"
        }
    ]
}